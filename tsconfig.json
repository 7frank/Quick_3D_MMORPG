{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES6",
    "module": "ES6",
    "lib": [
      "ESNext"
    ],
    /* Strict Type-Checking Options */
    "strict": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    /* Advanced Options */
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}